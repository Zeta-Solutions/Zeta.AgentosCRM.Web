
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Common.Modals
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Countries
@model CountryViewModel

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="CountryInformationsTab">

        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Abbrivation") :</h6>
               @Model.Country.Abbrivation
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.Country.Name
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Icon") :</h6>
                @Model.Country.Icon
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Code") :</h6>
                @Model.Country.Code
            </div>
            <div class="col-6 mb-3">
                <h6>(@L("Region")) @L("Name") :</h6>
                @Model.RegionName
            </div>
        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithClose.cshtml")