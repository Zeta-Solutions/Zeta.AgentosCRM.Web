@using Zeta.AgentosCRM.Authorization
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Countries
@model CountriesViewModel

@section Scripts
{
<script abp-src="/view-resources/Areas/AppAreaName/Views/Country/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("Country")' description='@L("CountryHeaderInfo")'>
    <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

    @if (IsGranted(AppPermissions.Pages_Countries))
    {
    <button id="CreateNewCountryButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewCountries")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="CountryTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetCountryButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="RegionNameFilterId">(@L("Region")) @L("Name")</label>
                        <input type="text" class="form-control" name="regionNameFilter" id="RegionNameFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="AbbrivationFilterId">@L("Abbrivation")</label>
                        <input type="text" class="form-control reload-on-keyup" name="abbrivationFilter" id="AbbrivationFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="NameFilterId">@L("Name")</label>
                        <input type="text" class="form-control reload-on-keyup" name="nameFilter" id="NameFilterId">
                    </div>
                </div>
                  <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="CodeFilterId">@L("Code")</label>
                        <input type="number" class="form-control reload-on-keyup" name="codeFilter" id="CodeFilterId">
                    </div>
                </div>
                  <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="IconFilterId">@L("Icon")</label>
                        <input type="tel" class="form-control reload-on-keyup" name="iconFilter" id="IconFilterId">
                    </div>
                </div>
                


                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="CountryTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("Abbrivation")</th>
                            <th>@L("Name")</th>
                            <th>@L("Code")</th>
                            <th>@L("Icon")</th>
                            <th>@L("Region")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>