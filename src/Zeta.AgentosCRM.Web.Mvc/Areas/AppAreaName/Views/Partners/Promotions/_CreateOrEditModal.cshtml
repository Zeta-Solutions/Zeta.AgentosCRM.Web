@using System.Globalization
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Common.Modals
@using Abp.Extensions
@section Styles
    {
    <link rel="stylesheet" abp-href="/view-resources/Areas/AppAreaName/Views/_Bundles/demo-ui-components.css" asp-append-version="true"/>
    }
  @section Scripts
{
    <script abp-src="/view-resources/Areas/AppAreaName/Views/_Bundles/demo-ui-components.js" asp-append-version="true"></script>
}
@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel( L("CreateNewPromotion")))

<div class="modal-body">
    <div id="InformationsForm">
        <form name="PromotionsInformationsForm" role="form" novalidate class="form-validation">

            <input type="hidden" name="id" value="1" />
            <div class="card">
                <div class="card-body">
                    <form id="composeEmailForm" class="needs-validation" novalidate>
                        <div class="row g-3">
                            <div class="col-md-12">
                                <label for="PromotionTitle" class="form-label">Promotion Title </label>
                                <input type="text" class="form-control" id="PromotionTitle" required>
                            </div>
                            <div class="col-12">
                                <label for="messageTextarea" class="form-label">Description</label>
                                <textarea class="form-control" id="messageTextarea" rows="6" maxlength="255" required></textarea>
                                <div class="invalid-feedback">
                                    Please enter a message.
                                </div>
                            </div>
                            <div class="col-md-12  mb-3">
                                <span class="btn btn-primary fileinput-button">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    <span>Add Attachment...</span>
                                    <input id="fileupload" type="file" name="files">
                                </span>
                            </div>
                            <div class="form-group col-md-6 mb-3">
                                <label for="SampleDatePicker" class="form-label">Start Date</label>
                                <div id="SampleDatePicker" class="input-group">
                                    <input type="datetime" name="SampleDatePicker" class="form-control date-picker">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="SampleDatePicker" class="form-label">Expiry Date</label>
                                <div id="SampleDatePicker" class="input-group">
                                    <input type="datetime" name="SampleDatePicker" class="form-control date-picker">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="applyTo" class="form-label">Apply To:</label><br />
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" id="option1" name="applyTo" value="option1" checked>
                                    <label class="form-check-label" for="AllProducts">All Products</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" id="option2" name="applyTo" value="option2">
                                    <label class="form-check-label" for="SelectProducts"> Select Products</label>
                                </div>
                            </div>

                            <!-- Submit button -->
                           @*  <div class="col-12 mt-3">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <button class="btn btn-secondary custom-button" type="submit">Cancel</button>
                            </div> *@
                        </div>
                    </form>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")