@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Common.Modals
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.EmailTemplates
@model EmailTemplateViewModel

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="EmailTemplateInformationsTab">

        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Abbrivation") :</h6>
                
                @Model.EmailTemplate.Title
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.EmailTemplate.EmailSubject
                
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.EmailTemplate.EmailBody
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithClose.cshtml")