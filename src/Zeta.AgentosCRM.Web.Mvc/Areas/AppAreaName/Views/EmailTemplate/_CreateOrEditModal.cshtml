            <div class="my-3">
                <label class="form-label" for="FeeType_Name">@L("Subject")</label>
                <input class="form-control" id="FeeType_Name" value="Name" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.FeeType.FeeTypeConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.FeeType.FeeTypeConsts.MinNameLength" />
            </div>
            
            <div class="my-3">
                <label class="form-label" for="FeeType_Name">@L("Body")</label>
