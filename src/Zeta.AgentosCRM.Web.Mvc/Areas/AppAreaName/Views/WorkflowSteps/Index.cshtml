@using Zeta.AgentosCRM.Authorization
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.WorkflowSteps
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Startup
@model WorkflowStepsViewModel
@{
ViewBag.CurrentPageName = AppAreaNamePageNames.Tenant.WorkflowSteps;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/AppAreaName/Views/WorkflowSteps/Index.js" asp-append-version="true"></script>
}

<abp-page-subheader title='@L("WorkflowSteps")' description='@L("WorkflowStepsHeaderInfo")'>

    @if (IsGranted(AppPermissions.Pages_WorkflowSteps_Create))
    {
    <button id="CreateNewWorkflowStepButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewWorkflowStep")</button>
    }
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                                <input type="text" id="WorkflowStepsTableFilter" class="form-control reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                <button id="GetWorkflowStepsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">

                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="MinSrlNoFilterId">@L("MinMax") @L("SrlNo")</label>
                        <div class="input-group">
                            <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L(" MinValue")" name="minSrlNoFilter" id="MinSrlNoFilterId" />
                            <input type="number" class="form-control m-input reload-on-keyup" placeholder="@L(" MaxValue")" name="maxSrlNoFilter" id="MaxSrlNoFilterId" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="AbbrivationFilterId">@L("Abbrivation")</label>
                        <input type="text" class="form-control reload-on-keyup" name="abbrivationFilter" id="AbbrivationFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="NameFilterId">@L("Name")</label>
                        <input type="text" class="form-control reload-on-keyup" name="nameFilter" id="NameFilterId">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="WorkflowNameFilterId">(@L("Workflow")) @L("Name")</label>
                        <input type="text" class="form-control" name="workflowNameFilter" id="WorkflowNameFilterId">
                    </div>
                </div>
                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="WorkflowStepsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>

                            <th>@L("Actions")</th>
                            <th>@L("SrlNo")</th>
                            <th>@L("Abbrivation")</th>
                            <th>@L("Name")</th>
                            <th>@L("WorkflowName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>