 @{
ViewBag.CurrentPageName = AppAreaNamePageNames.Tenant.DocumentType;
} *@
@section Scripts
    {
    <script abp-src="/view-resources/Areas/AppAreaName/Views/Accounts/Index.js" asp-append-version="true"></script>
}
@section Styles
    {
    <link rel="stylesheet" abp-href="/view-resources/Areas/AppAreaName/Views/Common/_PartialCardView.css" asp-append-version="true" />
   }
<abp-page-subheader title='@L("Accounts")' >
    
    
</abp-page-subheader>

<div class="@(await GetContainerClass())">
    <div class="card"> 
        <div class="card-body">
            <div class="row">
                <div class="row-lg-12">
                    <h3>@L("BusinessRegistrationNumber")</h3>  
                </div>
                <div class="col-lg-6">
                    <label class="form-label" for="Workflow_Name">@L("Enteryourbusinessregistrationnumber")</label>
                    <div class="d-flex justify-content-between align-items-center">
                        <input class="form-control" id="Workflow_Name" autocomplete="off" value="Name" type="text" name="name" />
                        <button type="button" class="btn btnclose btn-sm btn-outline text-white save-button rounded-0"><i class="fa fa-save text-white"></i> <span>Save</span></button>
                    </div>
                </div>

                <div class="col-lg-6">
                    <label class="form-label" for="Workflow_Name">@L("Enteryourbusinessregistrationnumber")</label>
                        <input class="form-control" id="Workflow_Name" autocomplete="off" value="Name" type="text" name="name" />
                 </div>
                <div class="col-lg-6"> 
                    <br /> 
                     <button type="button" class="btn btnclose btn-sm btn-outline text-white save-button rounded-0"><i class="fa fa-save text-white"></i> <span>Save</span></button>

                </div>

            </div>
            <div class="row">
                <div class="row-lg-12">
                    <h3>@L("BusinessInvoiceAddress")</h3> 
                </div>
                <div class="col-lg-4">
                    <label class="form-label" for="Workflow_Name">@L("Street")</label>
                        <input class="form-control" id="Workflow_Name" autocomplete="off" value="Name" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MinNameLength" />
                </div>
                <div class="col-lg-4">
                    <label class="form-label" for="Workflow_Name">@L("City")</label>
                        <input class="form-control" id="Workflow_Name" autocomplete="off" value="Name" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MinNameLength" />
                </div>
                <div class="col-lg-4">
                    <label class="form-label" for="Workflow_Name">@L("State")</label>
                        <input class="form-control" id="Workflow_Name" autocomplete="off" value="Name" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MinNameLength" />
                </div>
                <div class="col-lg-4">
                    <label class="form-label" for="Workflow_Name">@L("ZipCode")</label>
                        <input class="form-control" id="Workflow_Name" autocomplete="off" value="Name" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MinNameLength" />
                </div>
                <div class="col-lg-4">
                    <label class="form-label" for="Workflow_Name">@L("Country")</label>
                        <input class="form-control" id="Workflow_Name" autocomplete="off" value="Name" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.WorkflowConsts.MinNameLength" />
                </div> 
                <div class="col-lg-4">
                    
                </div> 
                
                <div class="col-lg-6"><br />
                    <button type="button" class="btn btnclose btn-sm btn-outline text-white save-button rounded-0"><i class="fa fa-save text-white"></i> <span>Save</span></button>
                 </div>
            </div> 
        </div> 
    </div> 
    <div class="card">
        <div class="card-body">
            <div class="form">
                <div class="row  "> 
                     <div class="row">
                         <div class="col-lg-10">
                             <h3>@L("Maunal Payment Details")</h3> 
                             <i class="fa fa-info-circle" aria-hidden="true"></i>&nbsp;<label>@("choose invoice types where you want to use this payment detail by default.You can Choose different in the invoice as well.")</label><br /><br />
                         </div>
                         <div class="col-lg-2">  
                              <button type="button" class="btn btnclose btn-sm btn-outline text-white rounded-0 addMaunalTax"><i class="fa fa-save text-white"></i> <span>Add New</span></button>
                         </div>
                     </div>
                </div>
            </div>
            
        </div>

    </div>
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>@L("TaxSettings")</h3>
                            <br />
                            <i class="fa fa-info-circle" aria-hidden="true"></i>&nbsp;<label>@("This Will be displayed while creating the invoice and account will be calculated accordingly.")</label><br /><br />
                        
                        </div>
                        <div class="col-lg-3"> 
                           <label class="form-label" for="Workflow_Name">@L("TaxCode")</label>
                        </div>
                        <div class="col-lg-3">
                           <label class="form-label" for="Workflow_Name">@L("TaxRate")</label>
                        </div>
                        <div class="col-lg-3">
                           <label class="form-label" for="Workflow_Name">@L("SetAsDefualt")</label>
                        </div>
                        <div class="col-lg-3">
                           <label class="form-label" for="Workflow_Name">@L("Action")</label>
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                        <br />
                        <input class="form-control" id="Workflow_Name" autocomplete="off" value="GST" type="text" name="name"   />
                        </div>
                        <div class="col-lg-3">
                            <br /> 
                            <input class="form-control" id="Workflow_Name" autocomplete="off" value="10" type="text" name="name" />
                        </div>
                        <div class="col-lg-3">
                            <br />
                            <button type="button" class="btn btnclose btn-sm btn-outline text-white save-button rounded-0"> <span>Defualt Tax</span></button>
                        </div>
                        <div class="col-lg-3">
                            <br />
                            <span><i class="fa fa-trash" style="font-size: 20px;"></i></span> 
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <br />
                            <input class="form-control" value="NT" type="text" name="name"   />
                        </div>
                        <div class="col-lg-3">
                            <br /> 
                            <input class="form-control" value="0" type="text" name="name" />
                        </div>
                        <div class="col-lg-3">
                            <br />
                            <button type="button" class="btn btnclose btn-sm btn-outline text-white  rounded-0"> <span>Set As Defualt</span></button>
                        </div>
                        <div class="col-lg-3">
                            <br /> 
                            <span><i class="fa fa-trash" style="font-size: 20px;"></i></span> 
                        </div>
                    </div>
                     <div class="row">
                         <div class="col-lg-12">
                            <div class="AddTaxDiv"></div>
                                 <div class="col-lg-6">
                                     <br />
                                     <button type="button" class="btn btnclose btn-sm btn-outline text-white rounded-0 addTax"><i class="fa fa-save text-white"></i> <span>Add New Tax</span></button>
                                 </div>
                         </div>
                     </div>
                </div>
            </div>
            
        </div>

    </div>
</div>