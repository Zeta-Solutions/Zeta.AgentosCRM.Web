
<link rel="stylesheet" abp-href="/view-resources/Areas/AppAreaName/Views/Common/_PartialCardView.css" asp-append-version="true" />
<link rel="stylesheet" abp-href="/view-resources/Areas/AppAreaName/Views/Client/_ClientOtherInformation.css" asp-append-version="true" />
<div class="maincard">
    <div class="card">
        <div>
            <span>
                <br />
                <br />
                <br />
            </span>
        </div>
        <button class="btn toggle-button w-100 toggle" type="button" data-bs-toggle="collapse" data-bs-target="#educationContent" aria-expanded="false">
            <span class="toggle-text">Education</span>
            <i class="fa fa-chevron-down"></i>
        </button>

        <div class="form">
            <div class="fixed-width-div">
                <!-- Education Section Toggle Button -->
                <div class="card-body">
                    <!-- Education Section (Collapsible) -->
                    <div class="collapse" id="educationContent">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="highestQualification">Highest Qualification:</label>
                                <input type="text" class="form-control" id="highestQualification">
                            </div>
                            <div class="col-md-4">
                                <label for="ielts">IELTS/PTS Training Required:</label>
                                <input type="text" class="form-control" id="ielts">
                            </div>
                            <div class="col-md-4">
                                <label for="preferredStudyArea">Preferred Study Area:</label>
                                <input type="text" class="form-control" id="preferredStudyArea">
                            </div>
                            <div class="col-md-4">
                                <label for="preferredUniversity">Preferred University:</label>
                                <input type="text" class="form-control" id="preferredUniversity">
                            </div>
                        </div>
                        <div class="col-md-11 text-end mt-14">
                            <button id="AddButton" class="btn btn-primary btn-sm blue">
                                <i class="fa fa-plus"></i> Save
                            </button>
                        </div>
                    </div>
                </div>
                <!-- End of Education Section -->
            </div>
        </div>
    </div>
</div>

