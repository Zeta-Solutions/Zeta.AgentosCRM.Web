@using System.Globalization
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Common.Modals
@using Abp.Extensions
@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel( L("CreateNewEducationBackground")))

<div class="modal-body">
    <div id="InformationsForm">
        <form name="EducationInformationsForm" role="form" novalidate class="form-validation">

            <input type="hidden" name="id" value="1" />
          

            <div class="my-3">
                <label class="form-label" for="Application_Abbrivation">@L("Degree Title")</label>
                <input class="form-control" id="Application_Abbrivation" value="APPLICATION" type="text" name="abbrivation" required maxlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MaxAbbrivationLength" minlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MinAbbrivationLength" />
            </div>

            <div class="my-3">
                <label class="form-label" for="Application_Name">@L("Degree Level")</label>
                <input class="form-control" id="Application_Name" value="tEST" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MinNameLength" />
            </div>
             <div class="my-3">
                <label class="form-label" for="Application_Name">@L("Institution")</label>
                <input class="form-control" id="Application_Name" value="tEST" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MinNameLength" />
            </div>
            <div class="row col-12">
                <div class="my-3 col-9">
                    <label class="form-label" for="Application_Name">@L("Course Start")</label>
                    <input class="form-control" id="Application_Name" value="tEST" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MinNameLength" />
                </div>
                <div class="my-3 col-3">
                    <label class="form-label" for="Application_Name">@L("Course End")</label>
                    <input class="form-control" id="Application_Name" value="tEST" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MinNameLength" />
                </div>
            </div>
            <div class="row col-12">


                <div class="my-3">
                    <label class="form-label" for="Application_Name">@L("Subject Area")</label>
                    <input class="form-control" id="Application_Name" value="tEST" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MinNameLength" />
                </div>
                <div class="my-3">
                    <label class="form-label" for="Application_Name">@L("Subject")</label>
                    <input class="form-control" id="Application_Name" value="tEST" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MinNameLength" />
                </div>
                  <div class="row">
                <div class="col-6">
                    <label class="fw-bold">Academic Score:</label>
                    <br />
                    <div class="form-check form-check-inline">
                        <input type="radio" class="form-check-input" id="relatedTo1" name="relatedTo" value="Option 1">
                        <label class="form-check-label" for="relatedTo1">Percentage</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" class="form-check-input" id="relatedTo2" name="relatedTo" value="Option 2">
                        <label class="form-check-label" for="relatedTo2">GPA</label>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">

                            <input class="form-control" id="Application_Name" value="tEST" type="number" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.DegreeLevelConsts.MinNameLength" />
                    </div>
                </div>
            </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")