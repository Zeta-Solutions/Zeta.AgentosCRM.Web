@using Zeta.AgentosCRM.Authorization
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.WorkflowSteps
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Startup
@model MasterDetailChild_Workflow_WorkflowStepsViewModel
@{
Layout = null;
}
<script abp-src="/view-resources/Areas/AppAreaName/Views/MasterDetailChild_Workflow_WorkflowSteps/Index.js" asp-append-version="true"></script>
<input type="hidden" id="MasterDetailChild_Workflow_WorkflowStepsId" value="@Model.WorkflowId" />

<div class="card card-custom gutter-b">

    <div class="card-header border-0 py-5">
        <h3 class="card-title align-items-start flex-column">
            <span class="card-label font-weight-bolder text-dark">@L("WorkflowSteps")</span>
            <span class="text-muted mt-3 font-weight-bold font-size-sm">@L("WorkflowStepsHeaderInfo")</span>
        </h3>
        <div class="card-toolbar">

            @if (IsGranted(AppPermissions.Pages_WorkflowSteps_Create))
            {
            <button id="CreateNewWorkflowStepButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewWorkflowStep")</button>
            }
        </div>
    </div>

    <div class="card-body">
        <div class="form">
            <div class="row align-items-center mb-4">
                <div class="col-xl-12">

                    <div class="my-3">
                        <div class="input-group">
                            <input type="text" id="MasterDetailChild_Workflow_WorkflowStepsTableFilter" class="form-control m-input" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                            <button id="GetWorkflowStepsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div id="MasterDetailChild_Workflow_AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
            <div class="col-md-12">

            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label for="MasterDetailChild_Workflow_MinSrlNoFilterId">@L("MinMax") @L("SrlNo")</label>
                    <div class="input-group">
                        <input type="number" class="form-control m-input" placeholder="@L(" MinValue")" name="minSrlNoFilter" id="MasterDetailChild_Workflow_MinSrlNoFilterId" />
                        <input type="number" class="form-control m-input" placeholder="@L(" MaxValue")" name="maxSrlNoFilter" id="MasterDetailChild_Workflow_MaxSrlNoFilterId" />
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="MasterDetailChild_Workflow_AbbrivationFilterId">@L("Abbrivation")</label>
                    <input type="text" class="form-control" name="abbrivationFilter" id="MasterDetailChild_Workflow_AbbrivationFilterId">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="MasterDetailChild_Workflow_NameFilterId">@L("Name")</label>
                    <input type="text" class="form-control" name="nameFilter" id="MasterDetailChild_Workflow_NameFilterId">
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-xl-12">
                <span id="MasterDetailChild_Workflow_ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                <span id="MasterDetailChild_Workflow_HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
            </div>
        </div>
        <div class="row align-items-center">
            <table id="MasterDetailChild_Workflow_WorkflowStepsTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                <thead>
                    <tr>
                        <th></th>

                        <th>@L("Actions")</th>
                        <th>@L("SrlNo")</th>
                        <th>@L("Abbrivation")</th>
                        <th>@L("Name")</th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>