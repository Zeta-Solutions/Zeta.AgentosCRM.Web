@using System.Globalization
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Common.Modals
@model CreateOrEditTaskPriorityModalViewModel
@using Abp.Extensions
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.priority;
@*@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel( L("CreateNewPriority")))*@
@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditTaskPriority")) : L("CreateNewPriority")))
<div class="modal-body">
    <div id="TaskInformationsTab">
        <form name="TasknformationsForm" role="form" novalidate class="form-validation">
             @if (Model.IsEditMode)
                {
                <input type="hidden" name="id" value="@Model.TaskPriority.Id" />
                }

            <div class="my-3">
                <label class="form-label" for="Category_Abbrivation">@L("Abbrivation")</label>
                <input class="form-control" id="Category_Abbrivation" value="@Model.TaskPriority.Abbrivation" type="text" name="abbrivation" required maxlength="@Zeta.AgentosCRM.CRMSetup.TaskPriorityConsts.MaxAbbrivationLength" minlength="@Zeta.AgentosCRM.CRMSetup.TaskPriorityConsts.MinAbbrivationLength" />
            </div>

            <div class="my-3">
                <label class="form-label" for="Category_Name">@L("Name")</label>
                <input class="form-control" id="Category_Name" value="@Model.TaskPriority.Name" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.TaskPriorityConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.TaskPriorityConsts.MinNameLength" />
            </div>

        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")