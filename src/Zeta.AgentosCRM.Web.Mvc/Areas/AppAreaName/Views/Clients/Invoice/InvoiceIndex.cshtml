@using Zeta.AgentosCRM.Authorization
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Startup
@* @model ClientAppointmentsViewModel *@
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Tenant.Clients;
}



<div class="maincard">
    <div class="col-md-12 text-end mb-3">
            @* <button id="CreateNewInvoiceButton" class="btn  btn-sm btnclose btn-outline text-white rounded-0"><i class="fa fa-plus text-white"></i> @L("AddNewInvoice")</button> *@
        <div class="dropdown">
            <button class="btn  btn-sm btnclose btn-outline text-white rounded-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                @L("AddNewInvoice")
                <i class="fas fa-arrow-down text-white"></i>
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" id="Commission">Commission Invoice</a></li>
                <li><a class="dropdown-item" id="General">General Invoice</a></li>
            </ul>
        </div>
        <input type="hidden" name="invoicetype" id="invoicetype" value="" />
    </div>
    
    <div class="card">

        <div class="card-body">
            <div class="form">
                <div class="row align-items-center">
                    <table id="Invoicestable" class="table align-middle  fs-8 gy-2 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>
                                <th>@L("InvoiceNo")</th>
                                <th>@L("IssueDate")</th>
                                <th>@L("Service")</th>
                                <th>@L("InvoiceAmount")</th>
                                <th>@L("DiscountGiven")</th>
                                <th>@L("IncomeShared")</th>
                                <th>@L("Status")</th>
                                <th></th>
                            </tr>
                        </thead>

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
