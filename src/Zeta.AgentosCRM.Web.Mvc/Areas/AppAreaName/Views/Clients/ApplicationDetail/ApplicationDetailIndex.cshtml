<form id="applicationDetailForm">
    <div class="col-md-12 text-end px-6">
        <button type="button" id="AppPreviousBtn" class="btn  btn-sm btnclose btn-outline text-white rounded-0"><i class="fa fa-arrow-left text-white"></i> @L("PreviousStep")</button>
        <button type="button" id="AppNextBtn" class="btn  btn-sm btnclose btn-outline text-white rounded-0"><i class="fa fa-arrow-right text-white"></i> @L("NextStep")</button>
        <button type="button" id="AppSubmitBtn" class="btn  btn-sm btn-success btn-outline text-white rounded-0"><i class="fa fa-check text-white"></i> @L("Complete")</button>
        <button type="button" id="AppDiscontinueBtn" class="btn  btn-sm btn-danger btn-outline text-white rounded-0"><i class="fa fa-close text-white"></i> @L("Discontinue")</button>
    </div>
    <div class="mx-5 my-5">

        <div class="card mb-3">
            <div class="card-body mb-4 fs-9">
                <div class="row">
                    <div class="col-lg-4">
                        <label class="form-label form-label-sm">@L("ClientName"):</label>
                        <p class="text-muted fs-6"> @Model.Application.Name</p>
                    </div>
                    <div class="col-lg-4">
                        <label class="form-label form-label-sm">@L("WorkflowName"):</label>
                        <p class="text-muted fs-6"> @Model.WorkflowName</p>
                    </div>
                    <div class="col-lg-4">
                        <label class="form-label form-label-sm">@L("PartnerName"):</label>
                        <p class="text-muted fs-6"> @Model.PartnerPartnerName</p>
                    </div>
                    <div class="col-lg-4">
                        <label class="form-label form-label-sm">@L("ProductName"):</label>
                        <p class="text-muted fs-6"> @Model.ProductName</p>
                    </div>
                    <div class="col-lg-12">
                        <label for="myChart" class="form-label form-label-sm col-sm-2">Overall Progress:</label>
                        <div>
                        <canvas id="myChart"></canvas>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- SmartWizard html -->
        <div class="card">
            <div class="card-body">
                <h3>Activity</h3>
                <div id="smartwizard">
                    <ul class="nav nav-progress" id="progressHead">
                    </ul>

