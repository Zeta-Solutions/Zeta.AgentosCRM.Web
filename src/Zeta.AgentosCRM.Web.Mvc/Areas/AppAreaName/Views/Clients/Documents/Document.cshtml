@using Zeta.AgentosCRM.Authorization
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Clients.ClientsAppointments
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Startup
@* @model ClientAppointmentsViewModel *@
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Tenant.Clients;
}



<div class="maincard">
    <div class="col-md-12 text-end mb-3">
          @if (IsGranted(AppPermissions.Pages_ClientAppointments))
    {
            <button id="CreateNewDocumentsButton" class="btn  btn-sm btnclose btn-outline text-white rounded-0"><i class="fa fa-plus text-white"></i> @L("AddNewDocument")</button>
    }
        @* <button id="CreateNewAppointmentButton" class="btn  btn-sm btnclose btn-outline text-white rounded-0"><i class="fa fa-plus text-white"></i> @L("AddAppointment")</button> *@
    </div>
    <div class="card">

        <div class="card-body">
            <div class="form">
                    <div class="row align-items-center">
                        <table id="Documentstable" class="table align-middle  fs-8 gy-2 dataTable no-footer">
                            <thead>
                                <tr>
                                    <th></th>
                                <th>@L("FileName")</th>
                                <th>@L("AddedBy")</th>
                                @* <th>@L("FileSize")</th> *@
                                <th>@L("AddedDate")</th>
                                    <th></th>
                                </tr>
                            </thead>
                          
                        </table>
                    </div>
           
            </div>
        </div>
    </div>
</div>
