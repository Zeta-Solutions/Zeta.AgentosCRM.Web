@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Common.Modals
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.InstallmentType
@model InstallmentTypeViewModel

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="InstallmentTypeInformationsTab">

        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Abbrivation") :</h6>
                @Model.InstallmentType.Abbrivation
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.InstallmentType.Name
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithClose.cshtml")