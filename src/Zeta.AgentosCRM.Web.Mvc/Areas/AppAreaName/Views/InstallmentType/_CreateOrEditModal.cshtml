@using System.Globalization
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Common.Modals
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.InstallmentType
@model CreateOrEditInstallmentTypeModalViewModel
@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode?(L("EditInstallmenttype")) : L("CreateNewInstallmentType")))

<div class="modal-body">
    <div id="InstallmentTypeInformationsTab">
        <form name="InstallmentTypeInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.InstallmentType.Id" />
            }

            <div class="my-3">
                <label class="form-label" for="InstallmentType_Abbrivation">@L("Abbrivation")</label>
                <input class="form-control" id="InstallmentType_Abbrivation" value="@Model.InstallmentType.Abbrivation" type="text" name="abbrivation" required maxlength="@Zeta.AgentosCRM.CRMSetup.InstallmentType.InstallmentTypeConsts.MaxAbbrivationLength" minlength="@Zeta.AgentosCRM.CRMSetup.InstallmentType.InstallmentTypeConsts.MinAbbrivationLength" />
            </div>

            <div class="my-3">
                <label class="form-label" for="InstallmentType_Name">@L("Name")</label>
                <input class="form-control" id="InstallmentType_Name" value="@Model.InstallmentType.Name" type="text" name="name" required maxlength="@Zeta.AgentosCRM.CRMSetup.InstallmentType.InstallmentTypeConsts.MaxNameLength" minlength="@Zeta.AgentosCRM.CRMSetup.InstallmentType.InstallmentTypeConsts.MinNameLength" />
            </div>

        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")