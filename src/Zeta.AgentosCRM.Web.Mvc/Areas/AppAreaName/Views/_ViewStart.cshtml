@using Zeta.AgentosCRM.UiCustomization.Dto
@{
    string viewName = ViewBag.theFormName;
    if (viewName == "LeadForm")
    {
        UiCustomizationSettingsDto theme = await GetTheme();
        //Layout = "~/Areas/AppAreaName/Views/Layout/" + theme.BaseSettings.Theme + "/_Layout.cshtml";
        Layout = "~/areas/appareaname/views/layout/_emptylayout.cshtml";
    }
    else
    {
        UiCustomizationSettingsDto theme = await GetTheme();
        Layout = "~/Areas/AppAreaName/Views/Layout/" + theme.BaseSettings.Theme + "/_Layout.cshtml";
    }
}
