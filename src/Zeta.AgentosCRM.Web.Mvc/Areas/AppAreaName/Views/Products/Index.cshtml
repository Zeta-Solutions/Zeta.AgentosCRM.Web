@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Models.Product;
@using Zeta.AgentosCRM.Web.Areas.AppAreaName.Startup;
@model ProductsViewModel
@{
    ViewBag.CurrentPageName = AppAreaNamePageNames.Tenant.Products;
}

@section Styles
    {
    <link rel="stylesheet" abp-href="/view-resources/Areas/AppAreaName/Views/Common/_PartialCardView.css" asp-append-version="true" />
   }
      @section Scripts
{
  
   <script abp-src="/view-resources/Areas/AppAreaName/Views/Products/Index.js" asp-append-version="true"></script>
    
}
<abp-page-subheader title='@L("Products")' description='@L("ProductsHeaderInfo")'>
      <button id="ExportToExcelButton" class="btn btn-white btn-outline btn-sm  me-1 rounded-0"><i class="fa fa-file-excel text-success"></i> @L("ExportToExcel")</button>
    <a href="@Url.Action("AddProducts", "Products", new { area = "AppAreaName" })" class="btn btn-white btn-outline btn-sm rounded-0">@L("AddProducts")</a>

</abp-page-subheader>

 <div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
       

        <div class="card-body">
            <div class="form">
                 <div class="row align-items-center mb-4">
                    <div class="col-xl-12">

                        <div class="my-3">
                            <div class="input-group">
                               
                        <input type="text" id="ProductsTableFilter" class="form-control form-control-sm reload-on-change" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                         <button id="GetProductsButton" class="btn btn-sm btnsearch" type="submit"><i class="flaticon-search-1"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
                </div>
                  <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                <div class="col-md-12">
                </div>

                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="AbbrivationFilterId">@L("Abbrivation")</label>
                        <input type="text" class="form-control reload-on-keyup" name="abbrivationFilter" id="AbbrivationFilterId">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="my-3">
                        <label class="form-label" for="NameFilterId">@L("Name")</label>
                        <input type="text" class="form-control reload-on-keyup" name="nameFilter" id="NameFilterId">
                    </div>
                </div>

                <div class="col-md-12 mt-5">
                    <button class="btn btn-secondary btn-sm" id="btn-reset-filters">Reset</button>
                </div>
            </div>
            <div class="row my-4">
                <div class="col-xl-12">
                    <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                    <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                </div>
            </div>
                       <div class="row align-items-center">
                <table id="ProductsTable" class="table align-middle  fs-8 gy-2 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>
                             
                            <th >@L("Name")</th>
                                    <th >@L("AssociatedPartner")</th>
                                    <th >@L("ProductType")</th>
                                    <th >@L("Branch")</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
               
            
        </div>
    </div>
    </div>



